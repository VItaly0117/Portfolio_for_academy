@page
@model About_me.Pages.Skills.IndexModel
@{
    ViewData["Title"] = "Skills List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-list-stars"></i> Skills List</h1>
        <div>
            <a asp-page="Create" class="btn btn-success">
                <i class="bi bi-plus-lg"></i> Add Skill
            </a>
            <a asp-page="/Index" class="btn btn-outline-secondary">
                <i class="bi bi-house-door"></i> Back to Profile
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th class="ps-4">Skill Name</th>
                        <th style="width: 35%;">Proficiency Level</th>
                        <th class="text-center" style="width: 150px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Person != null && Model.Person.Skills != null && Model.Person.Skills.Any())
                    {
                        @foreach (var skill in Model.Person.Skills)
                        {
                            <tr>
                                <td class="align-middle ps-4 fw-bold">@skill.Name</td>
                                <td class="align-middle">
                                    <div class="d-flex align-items-center">
                                        <span class="badge bg-primary me-2" style="width: 50px;">@skill.Level%</span>
                                        <div class="progress flex-grow-1" style="height: 8px;">
                                            <div class="progress-bar bg-info" role="progressbar" 
                                                 style="width: @skill.Level%;" 
                                                 aria-valuenow="@skill.Level" aria-valuemin="0" aria-valuemax="100">
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center align-middle">
                                    <a asp-page="./Edit" asp-route-skillName="@skill.Name" 
                                       class="btn btn-sm btn-outline-warning" title="Edit">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>

                                    <form method="post" asp-page-handler="Delete" asp-route-skillName="@skill.Name" 
                                          style="display:inline;" class="delete-form">
                                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                                onclick="confirmDelete(this)" title="Delete">
                                            <i class="bi bi-trash3-fill"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                No skills found. Add your first one!
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(btn) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    btn.closest('form').submit();
                }
            })
        }
    </script>
}