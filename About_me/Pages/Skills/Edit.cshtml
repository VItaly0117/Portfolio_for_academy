@page "{skillName}"
@model About_me.Pages.Skills.EditModel
@{
    ViewData["Title"] = "Редагувати навичку";
}

<h1>Редагувати навичку</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" name="OriginalName" value="@Model.OriginalName" />
            
            <div class="form-group mb-3">
                <label asp-for="Skill.Name" class="control-label">Назва навички</label>
                <input asp-for="Skill.Name" class="form-control" required />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Skill.Level" class="control-label">Рівень (0-100)</label>
                <input asp-for="Skill.Level" type="number" min="0" max="100" class="form-control" required />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Зберегти зміни</button>
                <a asp-page="Index" class="btn btn-secondary">Скасувати</a>
            </div>
        </form>
    </div>
</div>